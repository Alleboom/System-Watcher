<Window x:Class="System_Watcher_MVVM.Views.EditGroupView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:UC="clr-namespace:System_Watcher_MVVM.Views.Groups"
        xmlns:cal="http://www.caliburnproject.org"
        Title="Edit Group" Height="Auto" Width="300" VerticalContentAlignment="Top" SizeToContent="Height" Icon="/System Watcher MVVM;component/watchdog.ico">
    <StackPanel Height="Auto" Margin="5">
        <UC:GroupFormView Margin="5" cal:Bind.Model="{Binding GroupVM}"/>
        <Button Content="Save" x:Name="EditGroup"/>
    </StackPanel>
</Window>
